<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="de.andrena.egit.extensions.CommitCountDecorator"
            id="de.andrena.egit.extensions.CommitCountDecorator"
            label="GIT Commit count"
            lightweight="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IResource">
            </objectClass>
         </enablement>
         <description>
            Displays the number of commits on any file or directory.
         </description>
      </decorator>
   </extension>

</plugin>
